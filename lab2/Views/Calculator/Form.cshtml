<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-6">
            <h2>Kalkulator</h2>
            <form action="Result" method="post">
                <div class="mb-3">
                    <label class="form-label" for="a">Liczba 1</label>
                    <input class="form-control" id="a" name="a" type="number" step="0.00001" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="op">Operator</label>
                    <select class="form-select" id="op" name="op">
                        <option value="add">+</option>
                        <option value="sub">-</option>
                        <option value="mul">*</option>
                        <option value="div">/</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="b">Liczba 2</label>
                    <input class="form-control" id="b" name="b" type="number" step="0.00001" />
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary" type="submit">Oblicz</button>
                </div>
            </form>
        </div>
    </div>
</div>