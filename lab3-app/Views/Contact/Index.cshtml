@model Dictionary<int, Contact>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h2>Lista kontaktów</h2>
<a class="btn btn-primary" asp-action="Create" asp-controller="Contact">Dodaj kontakt</a>
<table>
    <tr>
        <th>Nazwa</th>
        <th>Email</th>
        <th>Akcje</th>
    </tr>
    @foreach (var contact in Model)
    {
        <tr>
            <td>@contact.Value.Name</td>
            <td>@contact.Value.Email</td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-controller="Contact" asp-route-id=@contact.Value.Id>Edytuj</a>
                <a class="btn btn-primary" asp-action="Details" asp-controller="Contact" asp-route-id=@contact.Value.Id>Szczegóły</a>
                <a class="btn btn-primary" asp-action="Delete" asp-controller="Contact" asp-route-id=@contact.Value.Id>Usuń</a>
            </td>
        </tr>
    }
</table>